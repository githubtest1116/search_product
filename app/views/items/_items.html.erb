<% if items %>
	<div class="row">
		<% items.each do |item| %>
			<div class="item">
				<div class="col-sm-3">
					<div class="panel panel-default">
						<div class="panel-heading text-center">
							<img src="<%= item.image_url %>" alt="no image">
						</div>
						<div class="panel-body">
							<% if register?(item) %>
								<p class="item-title"><%= link_to item.name, Item.find_by(code: item.code) %></p>
								<p><%= item.price %>円</p>
							<% else %>
								<p class="item-title"><%= item.name %></p>
								<p><%= item.price %>円</p>
							<% end %>
						</div>
						<div class="text-center">
							<%= render 'want_button', item: item %>
						</div>
					</div>
				</div>
			</div>
		<% end %>	
	</div>
<% end %>