<div class="row">
	<div class="col-xs-offset-2 col-xs-8">
		<div class="panel panel-default">
			<div class="panel-heading">商品情報の登録</div>
        <div class="panel-body">
          <%= form_for(item_register_info_path) do |f| %>
        		<div class="form-group">
        			<%= f.label :item_url, "Farfetchの商品URLを設定してください" %>
        			<%= f.url_field :item_url, class:"form-control" %>
        		</div>
        		<p>Farfetchのサイトは<a href="https://www.farfetch.com/jp/shopping/men/items.aspx" target="_blank">こちら</a>です</p>
        		<div class="text-right">
        			<%#= f.submit '商品の追加', onclick="window.close();", class:"btn btn-success" %>
        			<%= f.submit '商品の追加', class:"btn btn-success" %>
        		</div>
        	<% end %>
        </div>
		</div>
	</div>
</div>